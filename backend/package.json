{
  "name": "backend",
  "version": "1.0.0",
  "author": "Francisco Dami√£o Terto <francisco.damiao.dev@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "prebuild": "rimraf dist/",
    "build": "node esbuild.mjs",
    "dev": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn --transpile-only ./src/main.ts",
    "debug": "ts-node-dev -r tsconfig-paths/register -r dotenv/config --respawn --inspect --transpile-only ./src/main.ts",
    "format": "biome format --write ./**/*.ts",
    "start": "node -r dotenv/config dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "esbuild": "^0.25.4",
    "esbuild-ts-paths": "^1.1.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
